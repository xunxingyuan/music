<!--  -->
<template>
  <view class='container'>
    <learn hidden="{{activeTab != 'learn'}}"></learn>
    <resource hidden="{{activeTab != 'resource'}}"></resource>
    <me hidden="{{activeTab != 'me'||role!=='teacher'}}"></me>
    <student hidden="{{activeTab != 'me'||role!=='student'}}"></student>
    <vistor hidden="{{activeTab != 'me'||role!=='vistor'}}"></vistor>
    <nav :activeTab.sync='activeTab' @changeTab.user='changeTabCtrl'></nav>
  </view>
</template>

<script>
  import wepy from 'wepy';
  import Nav from '@/components/common/nav'
  import Learn from '@/components/learn'
  import Resource from '@/components/resource'
  import Me from '@/components/me'
  import Student from '@/components/student'
  import Vistor from '@/components/vistor'
  export default class Example extends wepy.page {
    config = {
      navigationBarTitleText: "学习",
    };
    data = {
      activeTab: '',
      role: 'vistor'
    };
    components = {
      nav: Nav,
      learn: Learn,
      resource: Resource,
      me: Me,
      student: Student,
      vistor: Vistor
    };
    methods = {
      changeTabCtrl(name, evt) {
        this.activeTab = name
        if (name === 'learn') {
          wx.setNavigationBarTitle({
            title: '学习'
          })
        } else if (name === 'resource') {
          wx.setNavigationBarTitle({
            title: '资源'
          })
        } else if (name === 'me') {
          wx.setNavigationBarTitle({
            title: '我的'
          })
        }
      }
    };
    events = {};
    watch = {};
    computed = {};
    async onLoad() {
      let role = await wepy.getStorageSync('role');
      switch (role) {
        case 'vistor':
          this.activeTab = 'resource'
          this.role = 'vistor'
          this.$apply()
          break;
        case 'teacher':
          this.activeTab = 'learn'
          this.role = 'teacher'
          this.$apply()
          break;
        case 'student':
          this.activeTab = 'learn'
          this.role = 'student'
          this.$apply()
          break;
        default:
          break;
      }
    };
    onShow() {};
  }
</script>

